<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="top.zimang.lifemodel.view.CreateLifeModelActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_single"
                    android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <EditText
                            android:id="@+id/life_model_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="LifeModel 名称"
                            android:maxLines="1"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/living_portion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="生活占比"
                        android:maxLines="1"
                        android:inputType="number"
                        android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/investment_portion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="投资占比"
                        android:maxLines="1"
                        android:inputType="number"
                        android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/saving_portion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="存储占比"
                        android:maxLines="1"
                        android:inputType="number"
                        android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/social_relationship_portion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="维持社会关系占比"
                        android:maxLines="1"
                        android:inputType="number"
                        android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_double"
                    android:textAllCaps="false"
                    android:onClick="onClickSaveLifeModel"
                    style="@style/Widget.MaterialComponents.Button"
                    android:text="添加 Life Model"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>