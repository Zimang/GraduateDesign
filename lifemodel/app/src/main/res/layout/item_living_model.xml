<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/living_mode_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:src="@drawable/ic_launcher"
                android:id="@+id/living_mode_img"
                android:layout_marginTop="@dimen/sp_subheading"
                android:layout_marginStart="@dimen/sp_subheading"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="@dimen/big_img"
                android:layout_height="@dimen/big_img"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_quad"
                android:layout_marginTop="@dimen/dp_quad"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/item_living_model_name_lable"
                        android:layout_width="wrap_content"

                        android:textSize="15sp"

                        android:text="@string/living_model_lable"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item_living_model_name"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_quad"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/item_living_model_location_name_lable"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/living_model_location_lable"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item_living_model_location_name"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/living_mode_description"
            app:layout_constraintTop_toBottomOf="@id/living_mode_info"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/item_living_model_description_lable"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="@string/living_model_description_lable"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_quad"
                android:layout_marginStart="@dimen/dp_quad"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_living_model_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineBreakStyle="strict"
                android:layout_marginTop="@dimen/dp_quad"
                android:layout_marginStart="@dimen/dp_quad"
                android:text="@string/living_model_description"
                android:textSize="15sp"
                android:textStyle="bold"
                />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>